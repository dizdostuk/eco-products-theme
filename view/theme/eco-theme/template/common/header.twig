<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
<script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
<script src="catalog/view/javascript/mfp/jquery.magnific-popup.min.js"></script>
<link rel="stylesheet" href="catalog/view/javascript/mfp/magnific-popup.css">
<link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
<script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css">
<link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<link href="//fonts.googleapis.com/css?family=Open+Sans:400,400i,300,700" rel="stylesheet" type="text/css" />
<link href="catalog/view/theme/eco-theme/stylesheet/stylesheet.css" rel="stylesheet">
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="catalog/view/javascript/common.js" type="text/javascript"></script>
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>
<nav id="top" class="nav_top hidden-xs">
  <div class="container d-flex align-items-center">
    <div class="nav pull-left">
      <span class="slogan hidden-xs hidden-sm">Натуральные продукты из деревни</span>
    </div>
    <div id="top-links" class="nav pull-right">
      <span class="hidden-xs hidden-sm">
        {% if informations %}
          {% for information in informations %}
            {% if information.id == 6 %}
              <a href="{{information.href}}" class="nav_right_href"><i class="fa fa-clock-o"></i>Ближайшая доставка {{ close_date }}</a>
            {% endif %}
          {% endfor %}
        {% endif %}
        
      </span>
      <span class="hidden-xs hidden-sm hidden-md">
        <a href="{{ contact }}" class="nav_right_href"><i class="fa fa-phone"></i>{{ telephone }}</a>
      </span>
    </div>
  </div>
</nav>
<header class="header">
  <div class="container">
    <div class="row flex_align_middle flex-end">
      <div class="col-sm-3 logo-left-sm">
        <div id="logo">{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>{% else %}
          <h1 class="logo-h1"><a href="{{ home }}">{{ name }}</a></h1>
          {% endif %}</div>
      </div>

      <div class="row responsive-header">
        <div class="col-sm-3 hidden-xs hidden-sm">
          <div class="header_links flex_align_middle">
            {% if informations %}
              {% for information in informations %}
                {% if information.id != 5 and information.id != 3 and information.id != 7  %}
                    {# <p>{{information.title}} - {{information.id}}</p> //checking information title and id #}
                    <a href="{{information.href}}" class="header_link">{{information.title}}</a>
                  
                {% endif %}
              {% endfor %}
            {% endif %}
          </div>
        </div>
        <div class="col-sm-6 hidden-xs">{{ search }}</div>
        <div class="hidden-xs hidden-sm col-md-1 col-lg-1 width-auto">
          <a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle user-link" data-toggle="dropdown"><i class="fa fa-user"></i></a>
          
          <ul class="dropdown-menu dropdown-menu-right">
            {% if logged %}
            <li><a href="{{ account }}">{{ text_account }}</a></li>
            <li><a href="{{ order }}">{{ text_order }}</a></li>
            <li><a href="{{ logout }}">{{ text_logout }}</a></li>
            {% else %}
            <li><a href="{{ register }}">{{ text_register }}</a></li>
            <li><a href="{{ login }}">{{ text_login }}</a></li>
            {% endif %}
          </ul>
        </div>
        <div class="col-sm-2 col-xs-3 width-auto">{{ cart }}</div>
        <div class="col-xs-3 hidden-sm hidden-md hidden-lg menu-btn-xs-width">
          <button id="menu-open" type="button" class="menu-button hidden-sm hidden-md hidden-lg"><i class="fa fa-bars"></i></button>
        </div>
      </div>

    </div>
  </div>
</header>
{{ menu }}



<script>
  $('#menu-open').click(function() {
    $('.header-menu').css('right', "0px");
  });

  $('#menu-close > i').click(function() {
    $('.header-menu').css('right', "-500px");
	});
</script>